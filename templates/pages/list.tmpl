{{define "title"}}{{.Title}}{{end}}

{{define "main"}}
<div class="container">
    <h1>{{.Title}}</h1>
    {{if .Tag}}
    <p>Posts tagged with "{{.Tag}}"</p>
    {{end}}
    
    <div class="posts">
        {{range .Posts}}
        <article class="post-preview">
            <h2><a href="/blog/{{.Slug}}">{{.Title}}</a></h2>
            <time>{{.Date.Format "January 2, 2006"}}</time>
            {{if .Description}}
            <p>{{.Description}}</p>
            {{end}}
            {{if .Tags}}
            <div class="tags">
                {{range .Tags}}
                <a href="/tag/{{.}}" class="tag">{{.}}</a>
                {{end}}
            </div>
            {{end}}
        </article>
        {{else}}
        <p>No posts found.</p>
        {{end}}
    </div>
</div>
{{end}}