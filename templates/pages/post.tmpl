{{define "title"}}{{.Post.Title}}{{end}}

{{define "main"}}
<article class="container post">
    <header>
        <h1>{{.Post.Title}}</h1>
        <time>{{.Post.Date.Format "January 2, 2006"}}</time>
        {{if .Post.Tags}}
        <div class="tags">
            {{range .Post.Tags}}
            <a href="/tag/{{.}}" class="tag">{{.}}</a>
            {{end}}
        </div>
        {{end}}
    </header>
    
    <div class="post-content">
        {{.Post.Content}}
    </div>
</article>
{{end}}